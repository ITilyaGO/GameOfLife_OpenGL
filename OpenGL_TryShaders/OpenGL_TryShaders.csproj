<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Shaders\blit.frag" />
    <None Remove="Shaders\fullscreen.vert" />
    <None Remove="Shaders\gol_update.frag" />
    <None Remove="Shaders\shader.frag" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Shaders\blit.frag" />
    <EmbeddedResource Include="Shaders\fullscreen.vert" />
    <EmbeddedResource Include="Shaders\gol_update.frag" />
    <EmbeddedResource Include="Shaders\shader.vert" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Shaders\shader.frag" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpenTK" Version="4.9.4" />
  </ItemGroup>

</Project>
